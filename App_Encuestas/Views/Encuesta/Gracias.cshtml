@{
    ViewBag.Title = "Gracias por su respuesta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm rounded text-center">
                <div class="card-body py-5">
                    <div class="text-success mb-3">
                        <i class="ri-checkbox-circle-line" style="font-size: 48px;"></i>
                    </div>
                    <h4 class="fw-bold">¡Gracias por responder la encuesta!</h4>
                    <p class="text-muted mt-2">Tus respuestas han sido registradas correctamente.</p>

                    <div class="mt-4">
                        <a href="@Url.Action("Index","Home")" class="btn btn-outline-primary btn-sm rounded-pill">
                            <i class="ri-home-4-line me-1"></i> Volver al inicio
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet" />
      

    <script>
              window.location.hash="no-back-button";
        window.location.hash="Again-No-back-button";//esta linea es necesaria para chrome
        window.onhashchange=function(){window.location.hash="no-back-button";}
    </script>
}
