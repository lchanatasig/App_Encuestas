@{
    ViewData["Title"] = "Descargar Reporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0" style="color:white">
                        <i class="ri-download-2-line me-2"></i> Descargar Reporte por Fecha
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="ExportarExcel" asp-controller="Encuesta" method="post">
                        <div class="mb-3">
                            <label class="form-label">Fecha de inicio</label>
                            <input type="date" name="fechaInicio" class="form-control form-control-sm" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fecha de fin</label>
                            <input type="date" name="fechaFin" class="form-control form-control-sm" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-sm rounded-pill">
                                <i class="ri-file-excel-2-line me-1"></i> Descargar Excel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Mensaje"] != null)
    {
        <script>
            Swal.fire({
                icon: 'warning',
                title: 'Sin resultados',
                text: '@TempData["Mensaje"]',
                confirmButtonText: 'Entendido'
            });
        </script>
    }
}
